<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.example.carlauncher.MainActivity">

    <include layout="@layout/advanced_weather"/>
    <include layout="@layout/states_bar"/>

    <com.example.carlauncher.CarRecyclerView
        android:id="@+id/rv_main"
        android:paddingTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/bench_layout" android:id="@+id/bench"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@drawable/button_menu_drawable"/>
    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@drawable/button_home_drawable"
        android:visibility="gone"/>

    <include layout="@layout/quick_start_area"/>
</FrameLayout>
